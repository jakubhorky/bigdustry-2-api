{
  "name": "bigdustry-2-api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch server/src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node server/dist/server.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:unit": "vitest run --dir server/test/unit",
    "test:int": "vitest run --dir server/test/integration",
    "db:generate": "drizzle-kit generate --config server/drizzle.config.ts",
    "db:migrate": "drizzle-kit push --config server/drizzle.config.ts",
    "db:push": "drizzle-kit push --config server/drizzle.config.ts",
    "seed": "tsx server/scripts/seed.ts",
    "k6:ws": "k6 run server/scripts/k6-ws.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "tsx": "^4.16.0",
    "typescript": "^5.4.2",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.4.0",
    "@fastify/rate-limit": "^9.1.0",
    "@trpc/server": "^10.45.2",
    "argon2": "^0.41.1",
    "drizzle-orm": "^0.33.0",
    "drizzle-kit": "^0.24.0",
    "fastify": "^4.27.2",
    "fastify-type-provider-zod": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.49.0",
    "nanoid": "^5.0.7",
    "pg": "^8.12.0",
    "pg-boss": "^9.0.3",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "trpc-openapi": "^6.1.0",
    "zod": "^3.23.8"
  }
}


